<form id="page-form" action="?" method="POST">

   


    <div class="container">
        <div class="row">
            <div class="col-md-8">


                <fieldset>
                    <legend>Details</legend>
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name"
                            value="<%= this.details.name||'' %>">
                        <small id="nameHelp" class="form-text text-muted">Enter the persons name</small>
                    </div>
                </fieldset>

                <fieldset>
                    <legend>Authentication</legend>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="text" class="form-control" id="email" name="email" placeholder="Enter Email"
                            value="<%= this.details.email||'' %>">

                    </div>


                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                            value="">
                        <small id="passwordHelp" class="form-text text-muted">Leave this blank to keep the old
                            password or to let the user go through the forgot password process</small>
                    </div>
                </fieldset>




            </div>
            <div class="col-md-4">



                <fieldset>
                    <legend>Roles</legend>
                    <% for (var c in this.roles){ %>
                    <section>
                        <h5>
                            <%= this.roles[c].label||'Not Set' %>
                        </h5>

                        <% for (var i in this.roles[c].items){ %>
                        <div class="form-check border-bottom pb-2 mb-1 mt-2">
                            <input name="roles[]" class="form-check-input" type="checkbox"
                                value="<%= this.roles[c].items[i].id %>" id="role-<%= this.roles[c].items[i].id %>"
                                <% if (this.roles[c].items[i].selected=='1'){ %>checked<% } %>>
                            <label class="form-check-label" for="role-<%= this.roles[c].items[i].id %>">
                                <%= this.roles[c].items[i].name %>
                            </label>
                            <small id="role-<%= this.roles[c].items[i].id %>-HelpBlock" class="form-text text-muted">
                                <%= this.roles[c].items[i].description %>
                            </small>
                        </div>
                        <% } %>

                    </section>
                    <% } %>

                </fieldset>





            </div>
        </div>
    </div>


    <input type="hidden" name="@@CSRF_NAME@@" value="@@CSRF_TOKEN@@">
    <nav class="form-action-bar">
        <div class="container">
            <div class="row">
                <div class="col">
                    <button class="btn btn-danger delete-btn" type="button">
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
                <div class="col text-right d-flex justify-content-between">
                    <button class="btn btn-light record w-50" type="button" data-id="">
                        Cancel
                    </button>
                    <button class="btn btn-primary w-50" type="submit">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </nav>
</form>